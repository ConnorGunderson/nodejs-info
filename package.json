{
  "name": "nodejs-info",
  "private": true,
  "scripts": {
    "dev": "next dev -p 4000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@types/react": "^17.0.37",
    "autoprefixer": "^10.4.0",
    "next": "12.0.4",
    "postcss": "^8.4.4",
    "react": "^17.0.2",
    "react-dom": "17.0.2",
    "tailwindcss": "^2.2.19"
  },
  "devDependencies": {
    "eslint": "7",
    "eslint-config-next": "12.0.4",
    "prettier": "^2.5.0",
    "stylelint": "^14.1.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-scss": "^4.0.0",
    "typescript": "^4.5.2"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "react-app",
      "plugin:import/recommended",
      "plugin:import/react",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "import/no-anonymous-default-export": 1,
      "import/no-named-as-default": 0,
      "import/named": 0,
      "import/order": [
        1,
        {
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index"
          ],
          "newlines-between": "always"
        }
      ],
      "no-console": 1,
      "no-debugger": "warn",
      "react/button-has-type": 1,
      "react/jsx-boolean-value": 1,
      "react/jsx-curly-brace-presence": 1,
      "react/jsx-fragments": 1,
      "react/jsx-key": 2,
      "react/jsx-no-duplicate-props": 1,
      "react/jsx-no-useless-fragment": 1,
      "react/jsx-pascal-case": 1,
      "react/jsx-sort-props": [
        1,
        {
          "noSortAlphabetically": true,
          "reservedFirst": true,
          "callbacksLast": true
        }
      ],
      "react/no-danger": 2,
      "react/no-unknown-property": 1
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": {
            "resolve": {
              "extensions": [
                ".js",
                ".jsx",
                ".ts",
                ".tsx"
              ],
              "modules": [
                "src",
                "node_modules"
              ]
            }
          }
        }
      }
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "defaultSeverity": "warning",
    "rules": {
      "no-invalid-position-at-import-rule": null,
      "at-rule-no-unknown": null
    }
  }
}
